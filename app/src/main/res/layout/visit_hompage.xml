<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/visit_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_menu_camera"/>
            <TextView
                android:id="@+id/visit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neodgm"
                android:text="이 름"/>
            <TextView
                android:id="@+id/visit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neodgm"
                android:text="이메일"/>
        </LinearLayout>

        <TextView
            android:id="@+id/visit_message"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:fontFamily="@font/neodgm"
            android:padding="10dp"
            android:text="나는 가끔 눈물을 흘린ㄷr..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/w_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/person" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:text="내가 왔다네~~~~"
                android:fontFamily="@font/neodgm"
                android:id="@+id/w_message" />

            <Button
                android:id="@+id/w_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neodgm"
                android:text="등록하기"/>
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:id="@+id/visit_guestbook" />

</LinearLayout>